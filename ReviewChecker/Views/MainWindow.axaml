<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ReviewChecker.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ReviewChecker.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/froggie.ico"
        Title="ReviewChecker">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel HorizontalAlignment="Center" Margin="5">
        <TextBox Text="{Binding ReviewText, Mode=TwoWay}" Watermark="Enter Review" Width="500" FontSize="25" Margin="5" TextChanged="TextBox_TextChanged"/>
        <Border IsVisible="{Binding IsVisisble}" Background="{Binding CardColor}" CornerRadius="5" Margin="5">
            <StackPanel Margin="5">
                <TextBlock FontSize="25" Text="{Binding IsPositive, StringFormat='Positive: {0}'}"/>
                <TextBlock FontSize="25" Text="{Binding Probability, StringFormat='Probability: {0:P2}'}" />
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
